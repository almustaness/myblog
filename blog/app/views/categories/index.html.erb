<h1 class="page-title">Article Categories</h1>
<% if logged_in? && Author.find(session[:author_id]).admin %>
  <%= link_to "[Add New Category]", new_category_path %>
<% end %>
<div>
  <% @cat.each do |c| %>
    <h3 class="categories-list-page"> <%= link_to c.catName, category_path(c) %> 
    <% if logged_in? && Author.find(session[:author_id]).admin %>
      <span class="delete-edit-category"><%= link_to "[Edit]", edit_category_path(c) %></span>
      <span>&nbsp &nbsp</span>
      <span class="delete-edit-category"><%= link_to "[Delete]", category_path(c), :method => :delete %></span>
     <% end %>
     </h3>
  <% end %>
</div>

